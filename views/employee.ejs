        <!-- Header Section -->
        <header>
            <div class="logo">
                <img src="/WhatsApp Image 2024-12-03 at 9.00.34 PM.jpeg" alt="FreshMart Logo">
            </div>
            <nav>
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li><a href="/home/employee/industry">Industry</a></li>
                    <li><a href="/home/employee/pickup">Pickup</a></li>
                </ul>
            </nav>
        </header>
        <div class="content">
            here the content will be added stay tuned</div>
    </div>
    <footer>
        <div class="footer-content">
            <p>&copy; 2024 Trash to Treasure. All rights reserved.</p>
            <nav>
                <ul>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/contact">Contact Us</a></li>
                </ul>
            </nav>
            <div class="social-media">
                <a href="https://facebook.com/yourpage">Facebook</a>
                <a href="https://instagram.com/yourpage">Instagram</a>
                <a href="https://twitter.com/yourpage">Twitter</a>
            </div>
            <form class="newsletter-signup">
                <label for="email">Subscribe for updates:</label>
                <input type="email" id="email" name="email" required placeholder="Your email">
                <button type="submit">Subscribe</button>
